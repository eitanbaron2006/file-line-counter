{
  "name": "file-line-counter",
  "displayName": "file-line-counter",
  "description": "file explorer plugin for displaying the number of lines besides each file in the file tree -  line-counter ",
  "version": "0.1.2",
  "publisher": "eitan-baron",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-line-counter.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "file-line-counter.refresh",
        "title": "Refresh Line Count",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lineCountView",
          "name": "Line Count"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "file-line-counter.refresh",
          "when": "view == lineCountView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "File Line Counter",
      "properties": {
        "fileLineCounter.summaryThreshold": {
          "type": "number",
          "default": 1000,
          "description": "Line count threshold for 'large file' detection in summary view"
        },
        "fileLineCounter.language": {
          "type": "string",
          "enum": [
            "en",
            "he"
          ],
          "default": "en",
          "enumDescriptions": [
            "English",
            "עברית (Hebrew - with RTL support)"
          ],
          "description": "Language for recommendations and AI analysis"
        },
        "fileLineCounter.aiProvider": {
          "type": "string",
          "enum": [
            "Gemini",
            "OpenAI",
            "Anthropic",
            "DeepSeek"
          ],
          "default": "Gemini",
          "description": "Select the AI provider for code analysis.",
          "order": 1
        },
        "fileLineCounter.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected AI provider.",
          "order": 2
        },
        "fileLineCounter.ignoreListActive": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable reading patterns from ignore files.",
          "order": 3
        },
        "fileLineCounter.ignoreFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".gitignore",
            ".vscodeignore",
            ".linecounterignore"
          ],
          "description": "List of files to read ignore patterns from (e.g., .gitignore).",
          "order": 4
        },
        "fileLineCounter.whitelistActive": {
          "type": "boolean",
          "default": false,
          "description": "Enable/Disable whitelist mode. Only files matching patterns in the included files will be counted.",
          "order": 5
        },
        "fileLineCounter.includeFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".linecounterinclude"
          ],
          "description": "List of files to read Whitelist (Include) patterns from.",
          "order": 6
        },
        "fileLineCounter.thresholds": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lines": {
                "type": "number"
              },
              "color": {
                "type": "string"
              }
            }
          },
          "default": [
            {
              "lines": 500,
              "color": "charts.yellow"
            },
            {
              "lines": 2000,
              "color": "charts.orange"
            },
            {
              "lines": 5000,
              "color": "charts.red"
            }
          ],
          "description": "Line count thresholds for coloring.",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "bash build-and-install.sh",
    "deploy:minor": "bash build-and-install.sh minor",
    "deploy:major": "bash build-and-install.sh major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
